#login/logout
POST          /login                           @im.actor.server.dashboard.controllers.Application.login
POST          /logout                          @im.actor.server.dashboard.controllers.Application.logout(email: String)

#managers
POST          /managers                        @im.actor.server.dashboard.controllers.Managers.create

#users
POST          /users                           @im.actor.server.dashboard.controllers.Users.create
PUT           /users/:id                       @im.actor.server.dashboard.controllers.Users.update(id: Int)
DELETE        /users/:id                       @im.actor.server.dashboard.controllers.Users.delete(id: Int)
GET           /users/:id                       @im.actor.server.dashboard.controllers.Users.get(id: Int)
GET           /users                           @im.actor.server.dashboard.controllers.Users.list(page: Int ?= 1, perPage: Int ?= 50)

#departments
GET           /department/:deptId/users        @im.actor.server.dashboard.controllers.Departments.users(deptId: Int, page: Int ?= 1, perPage: Int ?= 50)
POST          /department                      @im.actor.server.dashboard.controllers.Departments.create
GET           /department/:id                  @im.actor.server.dashboard.controllers.Departments.get(id: Int)
PUT           /department/:id                  @im.actor.server.dashboard.controllers.Departments.update(id: Int)
DELETE        /department/:id                  @im.actor.server.dashboard.controllers.Departments.delete(id: Int)
