<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="im.actor.messenger">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PROFILE" />

    <permission
        android:name="${applicationId}.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="${applicationId}.permission.C2D_MESSAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="false" />

    <application
        android:name="im.actor.messenger.app.ActorApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">

        <!-- Tour -->
        <activity
            android:name="im.actor.messenger.app.tour.TourActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/NoBarActivityTheme"
            android:windowSoftInputMode="adjustNothing" />

        <!-- Auth -->

        <activity
            android:name="im.actor.messenger.app.activity.AuthActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/CommonActivityTheme"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="im.actor.messenger.app.activity.PickCountryActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/CommonActivityTheme"
            android:windowSoftInputMode="adjustResize" />

        <!-- Chat -->

        <activity
            android:name="im.actor.messenger.app.activity.MainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/MainActivityTheme"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".app.fragment.chat.ChatActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/ChatActivityTheme"
            android:windowSoftInputMode="adjustResize" />

        <!-- Profiles -->

        <activity
            android:name="im.actor.messenger.app.activity.ProfileActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/ProfileActivityTheme"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />

        <activity
            android:name="im.actor.messenger.app.activity.GroupInfoActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/ProfileActivityTheme"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />

        <activity
            android:name="im.actor.messenger.app.activity.MyProfileActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/ProfileActivityTheme"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />

        <!-- Compose -->

        <activity
            android:name="im.actor.messenger.app.activity.ComposeActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/CommonActivityTheme"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="im.actor.messenger.app.activity.PickUserActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/CommonActivityTheme"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="im.actor.messenger.app.activity.CreateGroupActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/CommonActivityTheme"
            android:windowSoftInputMode="adjustResize|stateVisible" />

        <!-- Settings -->

        <activity
            android:name="im.actor.messenger.app.activity.NotificationsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/CommonActivityTheme"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />

        <activity
            android:name="im.actor.messenger.app.activity.ChatSettingsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/CommonActivityTheme"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />

        <activity
            android:name="im.actor.messenger.app.activity.HelpActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/CommonActivityTheme"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />

        <activity
            android:name=".app.activity.SecuritySettingsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/CommonActivityTheme"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />

        <!-- Media -->

        <activity
            android:name="im.actor.messenger.app.activity.ViewAvatarActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/CommonActivityTheme"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />

        <activity
            android:name="im.actor.messenger.app.activity.DocumentsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/CommonActivityTheme"
            android:windowSoftInputMode="adjustResize" />

        <!-- Actions -->

        <activity
            android:name="im.actor.messenger.app.activity.EditNameActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/CommonActivityTheme"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible" />

        <activity
            android:name="im.actor.messenger.app.activity.AddContactActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/CommonActivityTheme"
            android:windowSoftInputMode="adjustResize|stateAlwaysVisible" />

        <!-- Misc -->

        <activity
            android:name=".app.activity.TakePhotoActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.Transparent" />

        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />

        <activity android:name="net.hockeyapp.android.UpdateActivity" />

        <provider
            android:name="im.actor.messenger.app.providers.MediaProvider"
            android:authorities="${applicationId}.media"
            android:exported="true" />

        <provider
            android:name="im.actor.messenger.app.providers.AvatarProvider"
            android:authorities="${applicationId}.avatar"
            android:exported="true" />

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="d78e94b0dcd206307a64bfe0bbfaaf6b4713aea6" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCFJeO63cmT6zvLT2WW7ye8bnPzuIKaMMg" />

        <service
            android:name="im.actor.messenger.app.service.KeepAliveService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name="im.actor.messenger.app.receiver.PushReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="im.actor" />
            </intent-filter>
        </receiver>
    </application>
</manifest>